{
  "manifest_version": 3,
  "name": "REELSPOT - Instant Downloader",
  "version": "1.0",
  "description": "One-click access to download videos from Instagram, YouTube, TikTok and more via REELSPOT.",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
